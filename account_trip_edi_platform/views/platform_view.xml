<?xml version="1.0"?>
<openerp>
    <data>
        <record model="ir.ui.view" id="view_edi_company_platform_form">
            <field name="name">edi.company.form</field>
            <field name="model">edi.company</field>
            <field name="inherit_id" ref="account_trip_edi.edi_company_trip_parameter_form_view"/>
            <field name="arch" type="xml">
                <field name="trip_delete_folder" position="after">
                    <field name="has_platform" />
                    <newline/>

                    <separator string="FunzionalitÃ  di scambio dati:" colspan="6" attrs="{'invisible': [('has_platform', '=', False)]}"/>
                    <field name="connection_id" attrs="{'invisible': [('has_platform', '=', False)]}"/>
                    <field name="endpoint_id" attrs="{'invisible': [('has_platform', '=', False)]}" domain="[('connection_id', '=', connection_id)]"/>
                    <button name="import_platform_supplier_order" type="object" string="Forza scaricamento" icon="gtk-refresh" colspan="2" attrs="{'invisible': [('has_platform', '=', False)]}"/>

                    <field name="force_from_date" attrs="{'invisible': [('has_platform', '=', False)]}"/>
                    <field name="force_to_date" attrs="{'invisible': [('has_platform', '=', False)]}"/>


                    <field name="edi_supplier_out_path" attrs="{'invisible': [('has_platform', '=', False)]}"/>
                    <field name="separator" attrs="{'invisible': [('has_platform', '=', False)]}"/>
                    <button name="export_all_supplier_order" type="object" string="Esporta tutti" icon="gtk-refresh" colspan="2" attrs="{'invisible': [('has_platform', '=', False)]}"/>

                    <field name="edi_supplier_in_path" attrs="{'invisible': [('has_platform', '=', False)]}"/>
                    <field name="endpoint_ddt_id" attrs="{'invisible': [('has_platform', '=', False)]}" domain="[('connection_id', '=', connection_id)]"/>
                    <button name="import_all_supplier_order" type="object" string="Importa tutti" icon="gtk-refresh" colspan="2" attrs="{'invisible': [('has_platform', '=', False)]}"/>
                    <newline/>
                </field>
            </field>
        </record>

        <!--edi.supplier.order-->
        <record model="ir.ui.view" id="view_edi_supplier_order_tree">
            <field name="name">edi.supplier.order.tree</field>
            <field name="model">edi.supplier.order</field>
            <field name="arch" type="xml">
                <tree string="Ordine">
                    <field name="company_id"/>
                    <field name="connection_id"/>
                    <field name="endpoint_id" />
                    <field name="name" />
                    <field name="supplier_code" />
                    <field name="dealer" />
                    <field name="dealer_code" />
                    <field name="supplier" />
                    <field name="order_date" />
                    <field name="deadline_date" />
                    <field name="extracted" />
                    <field name="sent" />
                    <button name="extract_supplier_order" string="Estrai ordine" type="object" icon="gtk-save" attrs="{'invisible': [('extracted', '=', True)]}"/>
                    <button name="send_ddt_order" string="Invia DDT" type="object" icon="gtk-save" attrs="{'invisible': [('sent', '=', True)]}"/>
                </tree>
            </field>
        </record>
        <record model="ir.ui.view" id="view_edi_supplier_order_form">
            <field name="name">edi.supplier.order.form</field>
            <field name="model">edi.supplier.order</field>
            <field name="arch" type="xml">
                <form string="Ordine" version="7.0">
                    <header>
                        <button name="extract_supplier_order" string="Estrai ordine" type="object" icon="gtk-save" attrs="{'invisible': [('extracted', '=', True)]}"/>
                        <button name="send_ddt_order" string="Invia DDT" type="object" icon="gtk-connect" attrs="{'invisible': [('sent', '=', True)]}"/>
                    </header>
                    <sheet>
                        <group col="4" colspan="4">
                            <field name="company_id"/>
                            <field name="name" />

                            <field name="connection_id"/>
                            <field name="endpoint_id" />

                            <field name="supplier" />
                            <field name="supplier_code" />

                            <field name="dealer" />
                            <field name="dealer_code" />

                            <field name="order_date" />
                            <field name="deadline_date" />

                            <field name="extracted" />  <!--todo visible only for admin?-->
                            <field name="sent" />  <!--todo visible only for admin?-->
                            <notebook colspan="4">
                                <page string="Ordine fornitore">
                                    <group col="4" colspan="4">
                                        <separator string="Dettaglio OF:" colspan="4"/>
                                        <field name="line_ids" colspan="4" nolabel="1" >
                                            <tree string="Righe">
                                                <field name="sequence"/>
                                                <field name="name"/>
                                                <field name="supplier_name"/>
                                                <field name="uom_supplier"/>
                                                <field name="product_qty"/>
                                            </tree>
                                            <form string="Riga">
                                                <sheet>
                                                    <group colspan="4" col="4">
                                                        <field name="sequence"/>
                                                        <field name="name"/>
                                                        <field name="supplier_name"/>
                                                        <field name="supplier_code"/>
                                                        <field name="code"/>
                                                        <field name="uom_supplier"/>
                                                        <field name="uom_product"/>
                                                        <field name="product_qty"/>
                                                        <field name="order_product_qty"/>
                                                        <separator string="Note" colspan="4"/>
                                                        <field name="note" colspan="4" nolabel="1"/>
                                                    </group>
                                                </sheet>
                                            </form>
                                        </field>
                                    </group>
                                </page>
                                <page string="DDT">
                                    <group col="4" colspan="4">
                                        <separator string="Esito invio DDT:" colspan="4" attrs="{'invisible': [('sent_message', '=', False)]}"/>
                                        <field name="sent_message" attrs="{'invisible': [('sent_message', '=', False)]}" colspan="4" nolabel="1"/>
                                        <field name="sent_error" invisible="1"/>

                                        <separator string="Dettaglio DDT:" colspan="4"/>
                                        <field name="ddt_line_ids" colspan="4" nolabel="1" >
                                            <tree string="Righe" editable="bottom">
                                                <field name="sequence"/>
                                                <field name="name"/>
                                                <field name="date"/>
                                                <field name="date_received"/>
                                                <field name="code"/>
                                                <field name="uom_product"/>
                                                <field name="product_qty"/>
                                            </tree>
                                        </field>
                                    </group>
                                </page>
                            </notebook>
                            <separator string="Note" colspan="4"/>
                            <field name="note" colspan="4" nolabel="1"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record model="ir.actions.act_window" id="action_edi_supplier_order">
            <field name="name">Ordini produttore</field>
            <field name="res_model">edi.supplier.order</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_edi_supplier_order_tree"/>
            <field name="context">{}</field>
            <field name="domain">[]</field>
        </record>

        <menuitem
            id="menu_edi_supplier_order_root"
            name="Piattaforma"
            sequence="10"
            /><!--parent="base.menu_custom"-->

            <menuitem
                parent="menu_edi_supplier_order_root"
                id="menu_edi_supplier_order_management"
                name="Produttore"
                sequence="10"
                />
            <menuitem
                parent="menu_edi_supplier_order_management"
                id="menu_edi_supplier_producer_order"
                action="action_edi_supplier_order"
                sequence="10"
                />

    </data>
</openerp>

