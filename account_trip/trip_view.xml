    <record model="ir.ui.view" id="view_trip_tour_tree">
        <field name="name">trip.tour.tree</field>
        <field name="model">trip.tour</field>
        <field name="arch" type="xml">
            <tree string="Tour" colors="red:obsolete==True; blue: keep==True">
